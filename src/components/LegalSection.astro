---
export interface Props {
  title: string;
  id: string;
}

const { title, id } = Astro.props;
---

<section class="legal-section" id={id}>
  <div class="section-header">
    <h2 class="section-title">
      <a href={`#${id}`} class="section-anchor" aria-label={`Link to ${title}`}>
        {title}
      </a>
    </h2>
  </div>
  <div class="section-content">
    <slot />
  </div>
</section>

<style>
.legal-section {
  margin-bottom: 3rem;
  scroll-margin-top: 2rem;
}

.section-header {
  margin-bottom: 1.5rem;
  padding-bottom: 0.75rem;
  border-bottom: 2px solid var(--border-soft);
  position: relative;
}

.section-header::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 60px;
  height: 2px;
  background: var(--gradient-primary);
  border-radius: 2px;
}

.section-title {
  margin: 0;
  color: var(--text-primary);
  font-size: 1.6rem;
  font-weight: 700;
  letter-spacing: -0.025em;
  line-height: 1.3;
}

.section-anchor {
  color: inherit;
  text-decoration: none;
  transition: color 0.3s ease;
  position: relative;
}

.section-anchor:hover {
  color: var(--sakura-pink);
}

.section-anchor:hover::before {
  content: 'ðŸŒ¸';
  position: absolute;
  left: -2rem;
  font-size: 1rem;
  animation: bounce 0.6s ease;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4px); }
}

.section-content {
  color: var(--text-secondary);
  line-height: 1.7;
}

.section-content h3 {
  color: var(--text-primary);
  font-size: 1.2rem;
  font-weight: 600;
  margin: 2rem 0 1rem 0;
  position: relative;
}

.section-content h3::before {
  content: '';
  position: absolute;
  left: -1rem;
  top: 50%;
  transform: translateY(-50%);
  width: 4px;
  height: 100%;
  background: var(--gradient-primary);
  border-radius: 2px;
}

.section-content p {
  margin-bottom: 1rem;
}

.section-content ul {
  margin: 1rem 0;
  padding-left: 0;
  list-style: none;
}

.section-content li {
  position: relative;
  padding-left: 1.5rem;
  margin-bottom: 0.75rem;
  line-height: 1.6;
}

.section-content li::before {
  content: 'â€¢';
  position: absolute;
  left: 0;
  color: var(--sakura-pink);
  font-weight: bold;
  font-size: 1.2em;
}

.section-content strong {
  color: var(--text-primary);
  font-weight: 600;
}

.section-content code {
  background: rgba(255, 255, 255, 0.1);
  padding: 0.2rem 0.4rem;
  border-radius: 4px;
  font-family: 'Monaco', 'Menlo', monospace;
  font-size: 0.9em;
  color: var(--archan-blue);
  border: 1px solid rgba(100, 149, 237, 0.2);
}

.bots-grid {
  display: grid;
  gap: 2rem;
  margin: 2rem 0;
}

.contact-info {
  background: var(--gradient-soft);
  padding: 2rem;
  border-radius: 12px;
  border: 1px solid var(--border-soft);
  margin-top: 1rem;
}

.contact-info h3 {
  margin-top: 0;
}

@media (max-width: 768px) {
  .legal-section {
    margin-bottom: 2rem;
  }
  
  .section-title {
    font-size: 1.4rem;
  }
  
  .section-content h3::before {
    display: none;
  }
  
  .section-content h3 {
    padding-left: 0;
  }
  
  .contact-info {
    padding: 1.5rem;
  }
}
</style>
